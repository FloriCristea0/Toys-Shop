<html>
  <head>
    <link rel="stylesheet" href="/styles.css" />
    <title><%= category.name %></title>
    <link rel="icon" href="/images/logo.png" type="image/png" />
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-left">
        <img src="/images/logo.png" alt="Logo" class="navbar-logo" />
        <a href="/" class="navbar-item">Toys Universe</a>
      </div>
      <div class="navbar-right"></div>
    </div>

    <h1>Category: <%= category.name %></h1>
    <div class="buttons">
      <a href="/edit-category/<%= category.id %>"><button>Edit category</button></a>

      <form method="post" action="/delete-category/<%= category.id %>">
        <button type="submit" class="delete-button" onclick="return confirm('Are you sure you want to delete this category?')">Delete category</button>
      </form>
      <a href="/add-toy"><button>Add toy</button></a>
    </div>

    <h2>Toys in this category:</h2>
    <div class="toys-category">
      <% toysInCategory.forEach((toy) => { %>
      <div class="toy-card-category">
        <a href="/toy/<%= toy.id %>">
          <strong>Title:</strong> <%= toy.title %><br />
        </a>
        <strong>Date Added:</strong> <%= toy.dateAdded %><br />
        <% for (const [key, value] of Object.entries(toy)) { %> <% if (key !==
        'title' && key !== 'dateAdded' && key !== 'category' && key !==
        'description') { %>
        <strong><%= key.charAt(0).toUpperCase() + key.slice(1) %>:</strong> <%=
        value %><br />
        <% } %> <% } %>
      </div>
      <% }) %>
    </div>
  </body>
</html>
